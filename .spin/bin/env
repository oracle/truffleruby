# $BASH_SOURCE[0] is for Bash, ${(%):-%x} is for Zsh
SCRIPT_PATH=$(dirname "${BASH_SOURCE[0]:-${(%):-%x}}")
SCRIPT_PATH=$(cd "$SCRIPT_PATH" && pwd)
TRUFFLERUBY_DIR=$SCRIPT_PATH/../..
export JT_ENV=jvm-ce

unset JAVA_HOME

JT_RUBY=$(which ruby)

function jt {
  $JT_RUBY "$TRUFFLERUBY_DIR"/tool/jt.rb "$@"
}
